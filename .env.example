# Notion API Configuration
# SENSITIVE: Keep this secret
NOTION_API_KEY=your_notion_integration_token_here

# Supabase Configuration
# PUBLIC: This is your project URL (not sensitive)
SUPABASE_URL=https://your-project.supabase.co
# SENSITIVE: Keep this secret
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Cloudflare R2 Configuration
# PUBLIC: Account ID (not sensitive, visible in dashboard)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id_here
# SENSITIVE: Keep this secret
CLOUDFLARE_ACCESS_KEY_ID=your_cloudflare_access_key_id_here
# SENSITIVE: Keep this secret
CLOUDFLARE_SECRET_ACCESS_KEY=your_cloudflare_secret_access_key_here
# PUBLIC: Bucket name (not sensitive)
CLOUDFLARE_BUCKET_NAME=notion-images
# PUBLIC: R2 endpoint URL (not sensitive)
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# PUBLIC: Public URL for accessing images (not sensitive)
CLOUDFLARE_PUBLIC_URL=https://images.yourdomain.com

# Optional: Logging level (debug, info, warn, error)
# PUBLIC: Not sensitive
LOG_LEVEL=info

# Optional: Supabase table name
# PUBLIC: Not sensitive
SUPABASE_TABLE_NAME=notion_pages

# API Configuration (for Docker deployment)
# SENSITIVE: Keep this secret - used for API authentication
API_KEY=your-super-secret-api-key-change-this
# PUBLIC: API server port
API_PORT=3000
